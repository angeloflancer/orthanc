# Email Verification Configuration
# Set to true to require email verification before login
# Set to false to allow login with unverified email (but email must be registered)
REQUIRE_VERIFY_EMAIL=false

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/orthanc-auth

# JWT Secret (change this in production)
JWT_SECRET=your-secret-key-change-in-production

# Email Service Configuration (for sending verification emails)
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USER=your-email@outlook.com
EMAIL_PASS=your-password
EMAIL_FROM=service@mdecx.com

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:5829

# Server Port
PORT=5830

# Target Orthanc Service
TARGET_SERVICE=http://localhost:8042